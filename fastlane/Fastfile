# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc 'Unit Tests'
  lane :tests do
    scan(
      scheme: 'Melaka',
      device: 'iPhone 14',
      code_coverage: true,
      parallel_testing: false
    )
  end

  desc 'Deploy to Test Flight'
  lane :deploy_to_test_flight do
    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issure_id: ENV['ASC_ISSURE_ID'],
      key_content: ENV['ASC_API_KEY']
    )

    build_number = app_store_connect_build_number(
      api_key: api_key,
      app_identifier: 'com.yukimaterrace.ios.melaka',
      version: get_version_number,
      initial_build_number: 1
    )
    increment_build_number(build_number: build_number)

    build_app(
      scheme: 'Melaka',
      configuration: 'Debug'
    )
    
    upload_to_test_flight(api_key: asc_api_key)
  end
end
